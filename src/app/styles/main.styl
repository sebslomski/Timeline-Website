@import "reset"

pageWidth = 840px

body
  padding-top 100px

.container
  width pageWidth
  margin 0 auto

header
  #header-top
    z-index 10
    position relative
    width 100%
    height 200px
    margin-bottom -20px
    background lightblue
    border 1px solid gray
    border-bottom none

  #header-bar-skews
    z-index 5
    position relative
    height 10px
    margin 0 -10px
    border-bottom 10px solid #458589
    border-left 10px solid transparent
    border-right 10px solid transparent

  #header-bar
    z-index 5
    position relative
    margin 0 -10px
    height 60px
    background #5E9FA3
    border-top 1px solid #376A6E
    border-bottom 1px solid #7CB0B3
    -webkit-box-shadow 0px 2px 3px rgba(0, 0, 0, 0.4), 0px 10px 25px rgba(0, 0, 0, 0.3)


#content
  height 400px
  background lightblue
  border 1px solid gray
  border-top none
